using System.IO;
using UnrealBuildTool;

public class JSBSim : ModuleRules
{
	public JSBSim(ReadOnlyTargetRules Target) : base(Target)
	{
		Type = ModuleType.External;
		string JSBSimInstalled = "JSBSim";

		if (Target.Platform == UnrealTargetPlatform.Win64)
		{
			PublicSystemIncludePaths.Add(Path.Combine(ModuleDirectory, JSBSimInstalled, "Include"));

			string LibPath = Path.Combine(ModuleDirectory, JSBSimInstalled, "Lib");
			PublicAdditionalLibraries.Add(Path.Combine(LibPath, "JSBSim.lib"));
	}
       
	}
}
